@typeparam T
<div class="form-floating m-1">
	@ChildContent
	<label for="@(Attributes?.FirstOrDefault(kvp=>kvp.Key=="id").Value ?? String.Empty)">@(Label ?? nameof(Value))</label>
</div>
@code {
	[Parameter]
	public T Value { get; set; }
	[Parameter]
	public IEnumerable<KeyValuePair<String, Object>> Attributes { get; set; }
	[Parameter]
	public RenderFragment ChildContent { get; set; }

	private Object? _label;
	private Object? Label => _label ??= (Attributes?.FirstOrDefault(kvp => kvp.Key == "placeholder").Value ?? Attributes?.FirstOrDefault(kvp => kvp.Key == "label").Value);
}